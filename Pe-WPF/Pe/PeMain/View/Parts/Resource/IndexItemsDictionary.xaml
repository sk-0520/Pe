<ResourceDictionary 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:sys="clr-namespace:System;assembly=mscorlib"
>
	<sys:Double x:Key="SplitterWidth">5</sys:Double>
	
	<Style x:Key="DefualtWindowStyle" TargetType="Window">
		<Setter Property="WindowStyle" Value="ToolWindow" />
		<Setter Property="ShowInTaskbar" Value="False" />
	</Style>
	<Style x:Key="DefaultToolbarStyle" TargetType="ToolBar">
		<Setter Property="HorizontalAlignment" Value="Stretch" />
		<Setter Property="VerticalAlignment" Value="Stretch" />
	</Style>
	<Style x:Key="DefaultStatusbarStyle" TargetType="StatusBar">
		<Setter Property="HorizontalAlignment" Value="Stretch" />
		<Setter Property="VerticalAlignment" Value="Stretch" />
	</Style>
	<Style x:Key="DefaultMainPanelStyle" TargetType="Grid">
		<Setter Property="HorizontalAlignment" Value="Stretch" />
		<Setter Property="VerticalAlignment" Value="Stretch" />
	</Style>
	<Style x:Key="DefaultGridSplitterStyle" TargetType="GridSplitter">
		<Setter Property="HorizontalAlignment" Value="Left" />
		<Setter Property="VerticalAlignment" Value="Stretch" />
		<Setter Property="Width" Value="{StaticResource SplitterWidth}" />
	</Style>
	<Thickness x:Key="SplitterMargin" Left="{StaticResource SplitterWidth}" Top="0" Right="0" Bottom="0" />
</ResourceDictionary>