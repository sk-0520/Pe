<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:AP="clr-namespace:ContentTypeTextNet.Pe.PeMain.View.Parts"
	xmlns:AA="clr-namespace:ContentTypeTextNet.Pe.PeMain.View.Parts.Attached"
	x:Class="object"
>
	<!--
		x:Class="object"
		=> http://frog.raindrop.jp/knowledge/archives/002177.html
	-->
	
	<Style x:Key="DialogResultPanel" TargetType="StackPanel">
		<Setter Property="VerticalAlignment" Value="Center" />
		<Setter Property="HorizontalAlignment" Value="Right" />
		<Setter Property="Margin" Value="0, 4, 20, 8" />
		<Setter Property="Orientation" Value="Horizontal" />
	</Style>
	<Style x:Key="DialogResultButton" TargetType="Button">
		<Setter Property="Width" Value="120" />
		<Setter Property="Height" Value="28" />
		<Setter Property="Margin" Value="0, 0, 10, 0" />
	</Style>
	<Style x:Key="DialogResultButtonAccept" TargetType="Button" BasedOn="{StaticResource ResourceKey=DialogResultButton}">
		<Setter Property="AA:Language.Word" Value="common/ok" />
		<Setter Property="IsDefault" Value="True" />
	</Style>
	<Style x:Key="DialogResultButtonCancel" TargetType="Button" BasedOn="{StaticResource ResourceKey=DialogResultButton}">
		<Setter Property="AA:Language.Word" Value="common/cancel" />
	</Style>
</ResourceDictionary>