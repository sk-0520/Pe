<ResourceDictionary 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
>
	<!-- http://stackoverflow.com/questions/1763763/wpf-menu-item-with-image -->
	<Image x:Key="MenuItem" x:Shared="False" Source="{Binding MenuImage}" />
	
	<Style x:Key="IMenuItem" TargetType="MenuItem">
		<Setter Property="Header" Value="{Binding DisplayText}" />
		<Setter Property="Icon" Value="{StaticResource MenuItem}" />
	</Style>
</ResourceDictionary>