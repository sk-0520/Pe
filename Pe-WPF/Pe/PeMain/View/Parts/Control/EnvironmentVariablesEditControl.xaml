<UserControl
	x:Class="ContentTypeTextNet.Pe.PeMain.View.Parts.Control.EnvironmentVariablesEditControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	mc:Ignorable="d" 
	d:DesignHeight="179" d:DesignWidth="426"
>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="3*"/>
			<ColumnDefinition Width="2*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="31*"/>
			<RowDefinition Height="148*"/>
		</Grid.RowDefinitions>
		<CheckBox Content="edit" Margin="16,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" />
		<GroupBox Header="update" Grid.Row="1" Margin="0" >
			<DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Update}">
				<DataGrid.Columns>
					<DataGridTextColumn Header="key" />
					<DataGridTextColumn Header="value" />
				</DataGrid.Columns>
			</DataGrid>
		</GroupBox>
		<GroupBox Header="remove" Grid.Row="1" Grid.Column="1" Margin="0" >
			<DataGrid Margin="0" AutoGenerateColumns="False" ItemsSource="{Binding Remove}">
				<DataGrid.Columns>
					<DataGridTextColumn Header="key" />
				</DataGrid.Columns>
			</DataGrid>
		</GroupBox>
	</Grid>
</UserControl>
