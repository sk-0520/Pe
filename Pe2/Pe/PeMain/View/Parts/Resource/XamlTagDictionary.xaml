<ResourceDictionary 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:UI="clr-namespace:ContentTypeTextNet.Pe.PeMain.View.Parts"
>
	<Style x:Key="LanguageKeyButton" TargetType="Button">
		<Setter Property="Content" Value="{Binding UI:XamlTag.LanguageKey, RelativeSource={RelativeSource Self}}" />
	</Style>
	<Style x:Key="LanguageKeyLable" TargetType="Label">
		<Setter Property="Content" Value="{Binding UI:XamlTag.LanguageKey, RelativeSource={RelativeSource Self}}" />
	</Style>
	<Style x:Key="LanguageKeyCheckBox" TargetType="CheckBox">
		<Setter Property="Content" Value="{Binding UI:XamlTag.LanguageKey, RelativeSource={RelativeSource Self}}" />
	</Style>
	<Style x:Key="LanguageKeyRadioButton" TargetType="RadioButton">
		<Setter Property="Content" Value="{Binding UI:XamlTag.LanguageKey, RelativeSource={RelativeSource Self}}" />
	</Style>

</ResourceDictionary>