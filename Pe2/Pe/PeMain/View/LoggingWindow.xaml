<CD:CommonDataWindow
	x:Class="ContentTypeTextNet.Pe.PeMain.View.LoggingWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:CD="clr-namespace:ContentTypeTextNet.Pe.PeMain.View.Parts.Window"
	xmlns:UI="clr-namespace:ContentTypeTextNet.Pe.PeMain.View.Parts"
	UI:XamlTag.LanguageKey="window/log"
	Title="LoggingWindow" 
	Height="300" 
	Width="300" 
	ShowInTaskbar="False" 
	WindowStyle="ToolWindow"
>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="28"/>
			<RowDefinition Height="128*"/>
			<RowDefinition Height="67"/>
			<RowDefinition Height="28"/>
		</Grid.RowDefinitions>
		<ToolBar Grid.Row="0" >
			<ToolBar.Background>
				<SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
			</ToolBar.Background>
		</ToolBar>
		<ListView Grid.Row="1">
			<ListView.View>
				<GridView>
					<GridViewColumn/>
				</GridView>
			</ListView.View>
		</ListView>
		<TextBox Grid.Row="2" AllowDrop="False" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" IsUndoEnabled="False" IsReadOnly="True" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
		<StatusBar Grid.Row="3">
			<StatusBar.Background>
				<SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
			</StatusBar.Background>
		</StatusBar>
	</Grid>
</CD:CommonDataWindow>
