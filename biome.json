{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"assist": {
		"enabled": true,
		"actions": {
			"recommended": true,
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "off",
				"noUnusedFunctionParameters": "off"
			}
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git"
	},
	"formatter": {
		"useEditorconfig": true
	},
	"files": {
		"includes": [
			"*.ts",
			"Define/**/*.ts",
			"Source/ReleaseNote/**/*",
			"Source/Help/**/*",
			"Build/scripts/**/*"
		]
	}
}
