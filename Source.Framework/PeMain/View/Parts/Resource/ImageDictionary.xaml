<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:sys="clr-namespace:System;assembly=mscorlib"
>
  <Style x:Key="DefaultImage" TargetType="Image">
    <Style.Triggers>
      <Trigger Property="IsEnabled" Value="False">
        <Setter Property="Opacity" Value="0.5" />
      </Trigger>
    </Style.Triggers>
    <Setter Property="RenderOptions.BitmapScalingMode" Value="NearestNeighbor" />
  </Style>

  <sys:Double x:Key="ItemImageSpace">2</sys:Double>
  <Thickness 
    x:Key="ItemImageMargin"
    Left="{StaticResource ItemImageSpace}"
    Top="{StaticResource ItemImageSpace}"
    Right="{StaticResource ItemImageSpace}"
    Bottom="{StaticResource ItemImageSpace}"
  />

  <Style x:Key="ItemImage" TargetType="Image" BasedOn="{StaticResource DefaultImage}">
    <Setter Property="Margin" Value="{StaticResource ItemImageMargin}" />
  </Style>

  
</ResourceDictionary>