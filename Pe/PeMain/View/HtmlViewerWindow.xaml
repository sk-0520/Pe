<AW:ViewModelCommonDataWindow  
  x:Class="ContentTypeTextNet.Pe.PeMain.View.HtmlViewerWindow"
  x:TypeArguments="AVM:HtmlViewerViewModel"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:AVM="clr-namespace:ContentTypeTextNet.Pe.PeMain.ViewModel"
  xmlns:AW="clr-namespace:ContentTypeTextNet.Pe.PeMain.View.Parts.Window"
  
  Title="{Binding WindowTitle}"
  Width="{Binding WindowWidth}"
  Height="{Binding WindowHeight}"
  WindowStyle="{Binding WindowStyle}"
  Topmost="{Binding Topmost}"
  WindowState="{Binding WindowState}"
  
  Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
  Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
  BorderBrush="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" 
  
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  d:DesignWidth="640"
  d:DesignHeight="480"
  Icon="/PeMain;component/Resources/Icon/App.ico"
>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <WebBrowser x:Name="webDocument" Grid.Row="0" />
    <StatusBar Grid.Row="1" />
  </Grid>
</AW:ViewModelCommonDataWindow>
