<AW:ViewModelCommonDataWindow 
	x:Class="ContentTypeTextNet.Pe.PeMain.View.AboutWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:AM="clr-namespace:ContentTypeTextNet.Pe.PeMain"
	xmlns:ADD="clr-namespace:ContentTypeTextNet.Pe.Library.PeData.Define;assembly=PeData"
	xmlns:AD="clr-namespace:ContentTypeTextNet.Pe.PeMain.Define"
	xmlns:AW="clr-namespace:ContentTypeTextNet.Pe.PeMain.View.Parts.Window"
	xmlns:AA="clr-namespace:ContentTypeTextNet.Pe.PeMain.View.Parts.Attached"
	xmlns:AVM="clr-namespace:ContentTypeTextNet.Pe.PeMain.ViewModel"
	x:TypeArguments="AVM:AboutViewModel"
  Topmost="True"
	Title="AboutWindow" 
	AA:Language.Word="window/about"
	Width="800"
	Height="300" 
	ResizeMode="NoResize" WindowStartupLocation="CenterScreen" 
	Icon="/PeMain;component/Resources/Icon/App.ico"
	Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
	Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"
>
	<AW:CommonDataWindow.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/View/Parts/Resource/DialogDictionary.xaml"/>
				<ResourceDictionary Source="/View/Parts/Resource/TextBoxDictionary.xaml"/>
				<ResourceDictionary Source="/View/Parts/Resource/LabelDictionary.xaml"/>
				<ResourceDictionary Source="/View/Parts/Resource/ImageDictionary.xaml"/>
				<ResourceDictionary Source="/View/Parts/Resource/TextBlockDictionary.xaml"/>
			</ResourceDictionary.MergedDictionaries>
			<Style x:Key="LinkText" TargetType="TextBlock">
				<Setter Property="VerticalAlignment" Value="Center" />
				<Setter Property="Margin" Value="2,2,6,2" />
			</Style>
		</ResourceDictionary>
	</AW:CommonDataWindow.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<Grid Grid.Row="0" Margin="16">
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>

			<Grid Width="180" Grid.Row="0" Grid.Column="0">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" />
				</Grid.ColumnDefinitions>

				<Image
					Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
					Margin="4"
					AA:IconSize.IconScale="Big"
					Source="{x:Static AM:AppResource.ApplicationIconBig}"
					Style="{StaticResource DefaultImage}"
				/>

				<TextBlock Grid.Row="0" Grid.Column="1" Text="{x:Static AM:Constants.ApplicationName}" VerticalAlignment="Center" />
				<TextBlock Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" >
					<Run Text="{x:Static AM:Constants.BuildType}" />
					<Run Text=": " />
					<Run Text="{x:Static AM:Constants.BuildProcess}" />
					<Run Text="bit" />
				</TextBlock>

				<TextBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" IsReadOnly="True" Text="{x:Static AM:Constants.ApplicationVersion}" Style="{StaticResource DefaultTextBox}" HorizontalAlignment="Left" />

				<StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,8,0,0" Orientation="Vertical">
					<Label Content="copty" AA:Language.Word="about/copy" Style="{StaticResource TitleLabel}" />
					<StackPanel Orientation="Horizontal">
						<TextBlock Style="{StaticResource LinkText}">
							<Hyperlink Command="{Binding CopyLinkCommand}" CommandParameter="{x:Static AD:AboutCopyKind.Short}">
								<TextBlock Text="short" AA:Language.Word="about/copy/short" />
							</Hyperlink>
						</TextBlock>
						<TextBlock Style="{StaticResource LinkText}">
							<Hyperlink Command="{Binding CopyLinkCommand}" CommandParameter="{x:Static AD:AboutCopyKind.Long}">
								<TextBlock Text="long" AA:Language.Word="about/copy/long" />
							</Hyperlink>
						</TextBlock>
					</StackPanel>
				</StackPanel>
			</Grid>

			<StackPanel Grid.Row="0" Grid.Column="1" Margin="12">
				<!--TODO: ださい-->
				<TextBlock Style="{StaticResource LinkText}">
					<Hyperlink Command="{Binding OpenLinkCommand}" CommandParameter="{x:Static AM:Constants.UriAbout}">
						<TextBlock Text="web" AA:Language.Word="about/link/web" />
					</Hyperlink>
				</TextBlock>
				<TextBlock Style="{StaticResource LinkText}">
					<Hyperlink Command="{Binding OpenLinkCommand}" CommandParameter="{x:Static AM:Constants.MailAbout}">
						<TextBlock Text="mail" AA:Language.Word="about/link/mail" />
					</Hyperlink>
				</TextBlock>
				<TextBlock Style="{StaticResource LinkText}">
					<Hyperlink Command="{Binding OpenLinkCommand}" CommandParameter="{x:Static AM:Constants.UriDevelopment}">
						<TextBlock Text="dev" AA:Language.Word="about/link/dev" />
					</Hyperlink>
				</TextBlock>
				<TextBlock Style="{StaticResource LinkText}">
					<Hyperlink Command="{Binding OpenLinkCommand}" CommandParameter="{x:Static AM:Constants.UriForum}">
						<TextBlock Text="forum" AA:Language.Word="about/link/forum" />
					</Hyperlink>
				</TextBlock>
				<TextBlock Style="{StaticResource LinkText}">
					<Hyperlink Command="{Binding OpenLinkCommand}" CommandParameter="{x:Static AM:Constants.UriFeedback}">
						<TextBlock Text="feedback" AA:Language.Word="about/link/feedback" />
					</Hyperlink>
				</TextBlock>
			</StackPanel>

			<ListView Grid.Row="0" Grid.Column="2" ItemsSource="{Binding ComponentItems}">
				<ListView.View>
					<GridView>
						<GridViewColumn Header="component" AA:Language.Word="about/component" >
							<GridViewColumn.CellTemplate>
								<DataTemplate>
									<StackPanel Orientation="Horizontal">
										<Image AA:IconSize.IconScale="Small">
											<Image.Style>
												<Style TargetType="Image" BasedOn="{StaticResource ItemImage}">
													<Style.Triggers>
														<DataTrigger Binding="{Binding ComponentKind}" Value="{x:Static ADD:ComponentKind.Library}">
															<Setter Property="Source" Value="{x:Static AM:AppResource.AboutComponentKindLibraryImage}" />
														</DataTrigger>
														<DataTrigger Binding="{Binding ComponentKind}" Value="{x:Static ADD:ComponentKind.Image}">
															<Setter Property="Source" Value="{x:Static AM:AppResource.AboutComponentKindImageImage}" />
														</DataTrigger>
														<DataTrigger Binding="{Binding ComponentKind}" Value="{x:Static ADD:ComponentKind.Source}">
															<Setter Property="Source" Value="{x:Static AM:AppResource.AboutComponentKindSourceImage}" />
														</DataTrigger>
														<DataTrigger Binding="{Binding ComponentKind}" Value="{x:Static ADD:ComponentKind.WebPage}">
															<Setter Property="Source" Value="{x:Static AM:AppResource.AboutComponentKindWebPageImage}" />
														</DataTrigger>
													</Style.Triggers>
												</Style>
											</Image.Style>
										</Image>
										<TextBlock>
											<Hyperlink Command="{Binding OpenComponentCommand}">
												<TextBlock Text="{Binding DisplayText}" />
											</Hyperlink>
										</TextBlock>
									</StackPanel>
								</DataTemplate>
							</GridViewColumn.CellTemplate>
						</GridViewColumn>
						<GridViewColumn Header="license" AA:Language.Word="about/license" DisplayMemberBinding="{Binding License}" />
					</GridView>
				</ListView.View>
			</ListView>

		</Grid>


		<Grid Grid.Row="1" Margin="4,4,4,4">
			<Grid.Resources>
				<Style TargetType="Button">
					<Setter Property="Margin" Value="4" />
					<Setter Property="Padding" Value="8" />
				</Style>
			</Grid.Resources>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto" />

				<ColumnDefinition />

				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<Button Grid.Column="0" Command="{Binding OpenApplicationDirectoryCommand}">
				<StackPanel Orientation="Horizontal">
					<Image Source="{x:Static AM:AppResource.ApplicationIconSmall}" Style="{StaticResource DefaultImage}" />
					<TextBlock Text="app" AA:Language.Word="{x:Static AM:Constants.ApplicationName}" />
				</StackPanel>
			</Button>
			<Button Grid.Column="1" Command="{Binding OpenUserSettingDirectoryCommand}">
				<StackPanel Orientation="Horizontal">
					<Image Source="{x:Static AM:AppResource.CommonFolderImage}" Style="{StaticResource DefaultImage}" />
					<TextBlock Text="data" AA:Language.Word="about/data" />
				</StackPanel>
			</Button>
			<Button Grid.Column="2" Command="{Binding OpenHistoryCommand}">
				<StackPanel Orientation="Horizontal">
					<Image Source="{x:Static AM:AppResource.AboutHistoryImage}" Style="{StaticResource DefaultImage}" />
					<TextBlock Text="history" AA:Language.Word="about/history" />
				</StackPanel>
			</Button>
			<Button Grid.Column="3" Command="{Binding UpdateCommand}">
				<StackPanel Orientation="Horizontal">
					<Image Source="{x:Static AM:AppResource.AboutUpdateImage}" Style="{StaticResource DefaultImage}" />
					<TextBlock Text="update" AA:Language.Word="about/update" />
				</StackPanel>
			</Button>

			<Button Grid.Column="5" IsDefault="True"  Content="ok" AA:Language.Word="about/close" Command="{Binding CloseCommand}" />
		</Grid>

	</Grid>
</AW:ViewModelCommonDataWindow>
