<app_main_view_parts_control:CommonDataUserControl
  x:Class="ContentTypeTextNet.Pe.PeMain.View.Parts.Control.SettingPage.ToolbarSettingControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
  xmlns:app_library_sharedlibrary_view_converter="clr-namespace:ContentTypeTextNet.Library.SharedLibrary.View.Converter;assembly=ContentTypeTextNet.SharedLibrary"
  xmlns:app_library_pedata_define="clr-namespace:ContentTypeTextNet.Pe.Library.PeData.Define;assembly=PeData"
  xmlns:app_main="clr-namespace:ContentTypeTextNet.Pe.PeMain"
  xmlns:app_main_define="clr-namespace:ContentTypeTextNet.Pe.PeMain.Define"
  xmlns:app_main_view_parts="clr-namespace:ContentTypeTextNet.Pe.PeMain.View.Parts"
  xmlns:app_main_view_parts_control="clr-namespace:ContentTypeTextNet.Pe.PeMain.View.Parts.Control"
  xmlns:app_main_view_parts_attached="clr-namespace:ContentTypeTextNet.Pe.PeMain.View.Parts.Attached"
  xmlns:app_main_view_parts_converter="clr-namespace:ContentTypeTextNet.Pe.PeMain.View.Parts.Converter"
  xmlns:app_main_view_parts_converter_elc="clr-namespace:ContentTypeTextNet.Pe.PeMain.View.Parts.Converter.EnumLanguageConverter"

  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  mc:Ignorable="d"
  d:DesignHeight="400" d:DesignWidth="517"
>
  <app_main_view_parts_control:CommonDataUserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/View/Parts/Resource/ImageDictionary.xaml"/>
        <ResourceDictionary Source="/View/Parts/Resource/ToolbarDictionary.xaml"/>
        <ResourceDictionary Source="/View/Parts/Resource/GridSplitterDictionary.xaml"/>
        <ResourceDictionary Source="/View/Parts/Resource/GroupBoxDictionary.xaml"/>
        <ResourceDictionary Source="/View/Parts/Resource/LabelDictionary.xaml"/>
        <ResourceDictionary Source="/View/Parts/Resource/ComboBoxDictionary.xaml"/>
        <ResourceDictionary Source="/View/Parts/Resource/RadioButtonDictionary.xaml"/>
        <ResourceDictionary Source="/View/Parts/Resource/CheckBoxDictionary.xaml"/>
        <ResourceDictionary Source="/View/Parts/Resource/PopupDictionary.xaml"/>
        <ResourceDictionary Source="/View/Parts/Resource/TextBoxDictionary.xaml"/>
        <ResourceDictionary Source="/View/Parts/Resource/TextBlockDictionary.xaml"/>
        <ResourceDictionary Source="/View/Parts/Resource/ColorPickerDictionary.xaml"/>
      </ResourceDictionary.MergedDictionaries>
      <app_library_sharedlibrary_view_converter:LogicalIsNotNullConverter x:Key="LogicalIsNotNullConverter" />
      <app_main_view_parts_converter:DisplayTextConverter x:Key="DisplayTextConverter" />
      <app_main_view_parts_converter:SelectedNodeAndLauncherItemConverter x:Key="SelectedNodeAndLauncherItemConverter" />
      <app_main_view_parts_converter:TreeListLauncherItemRelationConverter x:Key="TreeListLauncherItemRelationConverter" />
      <app_main_view_parts_converter:ToolbarDockTypeImageConverter x:Key="ToolbarDockTypeImageConverter" />
      <app_main_view_parts_converter:LauncherGroupIconTypeImageConverter x:Key="LauncherGroupIconTypeImageConverter" />
      <app_main_view_parts_converter_elc:DockTypeLanguageConverter  x:Key="DockTypeLanguageConverter" />
      <app_main_view_parts_converter_elc:IconScaleLanguageConverter x:Key="IconScaleLanguageConverter" />
      <app_main_view_parts_converter_elc:ToolbarButtonPositionLanguageConverter x:Key="ToolbarButtonPositionLanguageConverter" />
      <app_library_sharedlibrary_view_converter:LogicalMultiAndConverter x:Key="LogicalMultiAndConverter" />
      <app_library_sharedlibrary_view_converter:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
    </ResourceDictionary>
  </app_main_view_parts_control:CommonDataUserControl.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="320"/>
      <ColumnDefinition Width="180*"/>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="140*"/>
    </Grid.ColumnDefinitions>
    <GroupBox Grid.Row="0" Grid.RowSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Style="{StaticResource DefaultGroupBox}">
      <GroupBox.Header>
        <Grid HorizontalAlignment="Stretch">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition MinWidth="60" />
          </Grid.ColumnDefinitions>
          <ComboBox Grid.Column="0" SelectedIndex="0" DisplayMemberPath="DisplayText" SelectedItem="{Binding SelectedToolbar}" ItemsSource="{Binding ToolbarItemList, Mode=OneTime}" />
          <Button Grid.Column="1" Content="screen" app_main_view_parts_attached:Language.Word="toolbar-setting/screen" Command="{Binding ShowScreenCommand}" />
        </Grid>
      </GroupBox.Header>
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="group" app_main_view_parts_attached:Language.Word="toolbar-setting/toolbar/group" Style="{StaticResource HeaderLabel}" Target="{Binding ElementName=selectGroup}" />
        <ComboBox x:Name="selectGroup" Grid.Column="1" SelectedValuePath="Id" ItemsSource="{Binding DefaultGroupList}" SelectedValue="{Binding SelectedToolbar.DefaultGroupId}" SelectedIndex="{Binding DefaultGroupIndex}" Style="{StaticResource DefaultComboBox}" >
          <ComboBox.ItemTemplate>
            <ItemContainerTemplate>
              <ContentPresenter Content="{Binding Converter={StaticResource DisplayTextConverter}}" />
            </ItemContainerTemplate>
          </ComboBox.ItemTemplate>
        </ComboBox>

        <Label Grid.Row="1" Grid.Column="0" Content="dock" app_main_view_parts_attached:Language.Word="toolbar-setting/toolbar/position" Style="{StaticResource HeaderLabel}" Target="{Binding ElementName=selectDockType}" />
        <ComboBox x:Name="selectDockType" Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Source={x:Static app_main_view_parts:EnumList.DockTypeList}}" SelectedItem="{Binding SelectedToolbar.DockType, Mode=TwoWay}" Style="{StaticResource DefaultComboBox}">
          <ComboBox.Resources>
            <Size x:Key="ImageSize" Width="16" Height="16" />
          </ComboBox.Resources>
          <ComboBox.ItemTemplate>
            <DataTemplate>
              <StackPanel Orientation="Horizontal">
                <Label SnapsToDevicePixels="True" Content="{Binding Converter={StaticResource ToolbarDockTypeImageConverter}, ConverterParameter={StaticResource ImageSize}}" />
                <TextBlock VerticalAlignment="Center">
                  <TextBlock.Text>
                    <MultiBinding Converter="{StaticResource DockTypeLanguageConverter}" >
                      <Binding Path="" />
                      <!-- *{Binding}* -->
                      <Binding Path="CommonData.Language" RelativeSource="{RelativeSource AncestorType=app_main_view_parts_control:CommonDataUserControl}" />
                    </MultiBinding>
                  </TextBlock.Text>
                </TextBlock>
              </StackPanel>
            </DataTemplate>
          </ComboBox.ItemTemplate>
        </ComboBox>

        <Label Grid.Row="2" Grid.Column="0" Content="pos" app_main_view_parts_attached:Language.Word="toolbar-setting/toolbar/button" Style="{StaticResource HeaderLabel}" Target="{Binding ElementName=selectButtonPosition}" />
        <ComboBox x:Name="selectButtonPosition" Grid.Row="2" Grid.Column="1" ItemsSource="{Binding Source={x:Static app_main_view_parts:EnumList.ToolbarButtonPositionList}}" SelectedItem="{Binding SelectedToolbar.ButtonPosition, Mode=TwoWay}"  Style="{StaticResource DefaultComboBox}">
          <ComboBox.ItemTemplate>
            <DataTemplate>
              <TextBlock>
                <TextBlock.Text>
                  <MultiBinding Converter="{StaticResource ToolbarButtonPositionLanguageConverter}" >
                    <Binding Path="" />
                    <Binding Path="CommonData.Language" RelativeSource="{RelativeSource AncestorType=app_main_view_parts_control:CommonDataUserControl}" />
                  </MultiBinding>
                </TextBlock.Text>
              </TextBlock>
            </DataTemplate>
          </ComboBox.ItemTemplate>
        </ComboBox>

        <Label Grid.Row="3" Grid.Column="0" Content="icon" app_main_view_parts_attached:Language.Word="toolbar-setting/toolbar/icon" Style="{StaticResource HeaderLabel}" Target="{Binding ElementName=selectIcon}" />
        <ComboBox x:Name="selectIcon" Grid.Row="3" Grid.Column="1" ItemsSource="{Binding Source={x:Static app_main_view_parts:EnumList.PlainIconScaleList}}" SelectedItem="{Binding SelectedToolbar.IconScale, Mode=TwoWay}"  Style="{StaticResource DefaultComboBox}">
          <ComboBox.ItemTemplate>
            <DataTemplate>
              <TextBlock>
                <TextBlock.Text>
                  <MultiBinding Converter="{StaticResource IconScaleLanguageConverter}" >
                    <Binding Path="" />
                    <Binding Path="CommonData.Language" RelativeSource="{RelativeSource AncestorType=app_main_view_parts_control:CommonDataUserControl}" />
                  </MultiBinding>
                </TextBlock.Text>
              </TextBlock>
            </DataTemplate>
          </ComboBox.ItemTemplate>
        </ComboBox>

        <Label Grid.Row="4" Grid.Column="0" VerticalAlignment="Top" Content="font" app_main_view_parts_attached:Language.Word="toolbar-setting/toolbar/font" Style="{StaticResource HeaderLabel}" Target="{Binding ElementName=selectFont}" />
        <app_main_view_parts_control:FontSelectControl
          x:Name="selectFont"
          Grid.Row="4"
          Grid.Column="1"
          FamilyName="{Binding SelectedToolbar.FontFamily}"
          IsBold="{Binding SelectedToolbar.FontBold}"
          IsItalic="{Binding SelectedToolbar.FontItalic}"
          Size="{Binding SelectedToolbar.FontSize}"
          SizeMinimum="{x:Static app_main:Constants.ToolbarFontMinimumSize}"
          SizeMaximum="{x:Static app_main:Constants.ToolbarFontMaximumSize}"
        />

        <Label Grid.Row="5" Grid.Column="0" Content="text length" app_main_view_parts_attached:Language.Word="toolbar-setting/toolbar/text-length" Style="{StaticResource HeaderLabel}" />
        <app_main_view_parts_control:DoubleSliderControl
          Grid.Row="5"
          Grid.Column="1"
          Value="{Binding SelectedToolbar.TextWidth, Mode=TwoWay}"
          Minimum="{Binding Source={x:Static app_main:Constants.ToolbarTextMinimumLength}}"
          Maximum="{Binding Source={x:Static app_main:Constants.ToolbarTextMaximumLength}}"
        />

        <Label Grid.Row="6" Grid.Column="0" Content="hide wait" app_main_view_parts_attached:Language.Word="toolbar-setting/toolbar/auto-hide-time" Style="{StaticResource HeaderLabel}" />
        <app_main_view_parts_control:TimeSliderControl
          Grid.Row="6"
          Grid.Column="1"
          Value="{Binding SelectedToolbar.HideWaitTime, Mode=TwoWay}"
          Minimum="{Binding Source={x:Static app_main:Constants.ToolbarHideWaitMinimumTime}}"
          Maximum="{Binding Source={x:Static app_main:Constants.ToolbarHideWaitMaximumTime}}"
        />

        <StackPanel Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Top">
          <StackPanel.Resources>
            <Style TargetType="CheckBox" BasedOn="{StaticResource DefaultVerticalCheckBox}" />
          </StackPanel.Resources>
          <CheckBox Content="visible" app_main_view_parts_attached:Language.Word="toolbar-setting/toolbar/visible" IsChecked="{Binding SelectedToolbar.IsVisible}" />
          <CheckBox Content="topmost" app_main_view_parts_attached:Language.Word="toolbar-setting/toolbar/topmost" IsChecked="{Binding SelectedToolbar.IsTopmost}" />
          <CheckBox Content="auto hide" app_main_view_parts_attached:Language.Word="toolbar-setting/toolbar/auto-hide" IsChecked="{Binding SelectedToolbar.AutoHide}" />
          <CheckBox Content="show text" app_main_view_parts_attached:Language.Word="toolbar-setting/toolbar/show-text"  IsChecked="{Binding SelectedToolbar.TextVisible}" />
          <CheckBox Content="menu position" app_main_view_parts_attached:Language.Word="toolbar-setting/toolbar/menu-posotion" IsChecked="{Binding SelectedToolbar.MenuPositionCorrection}" />
          <CheckBox Content="menu visible" app_main_view_parts_attached:Language.Word="toolbar-setting/toolbar/menu-visible" IsChecked="{Binding SelectedToolbar.IsVisibleMenuButton}" />
        </StackPanel>
      </Grid>
    </GroupBox>
    <Grid Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      <!--<ToolBarTray HorizontalAlignment="Stretch" VerticalAlignment="Stretch">-->
      <ToolBar Style="{StaticResource DefaultHorizontalToolbar}">
        <!--<StackPanel Orientation="Horizontal">-->
        <Button app_main_view_parts_attached:Language.Hint="toolbar-setting/group/node/add/group" Command="{Binding CreateGroupCommand}">
          <Image Source="{x:Static app_main:AppResource.SettingLauncherGroupParentImage}" Style="{StaticResource DefaultImage}" />
        </Button>
        <Button
          app_main_view_parts_attached:Language.Hint="toolbar-setting/group/node/add/item"
          IsEnabled="{Binding SelectedLauncherItem, ElementName=listItems, Converter={StaticResource LogicalIsNotNullConverter}}"
          Command="{Binding CreateLauncherItemCommand}"
        >
          <Button.CommandParameter>
            <MultiBinding Converter="{StaticResource SelectedNodeAndLauncherItemConverter}">
              <Binding Path="SelectedItem" ElementName="treeGroup" />
              <Binding Path="SelectedLauncherItem" ElementName="listItems" />
            </MultiBinding>
          </Button.CommandParameter>
          <Image Source="{x:Static app_main:AppResource.SettingLauncherGroupItemImage}" Style="{StaticResource DefaultImage}" />
        </Button>
        <Separator />
        <Button app_main_view_parts_attached:Language.Hint="toolbar-setting/group/node/up" Command="{Binding NodeUpCommand}" CommandParameter="{Binding SelectedItem,ElementName=treeGroup}">
          <Image Source="{x:Static app_main:AppResource.CommonUpImage}" Style="{StaticResource DefaultImage}" />
        </Button>
        <Button app_main_view_parts_attached:Language.Hint="toolbar-setting/group/node/down" Command="{Binding NodeDownCommand}" CommandParameter="{Binding SelectedItem,ElementName=treeGroup}">
          <Image Source="{x:Static app_main:AppResource.CommonDownImage}" Style="{StaticResource DefaultImage}" />
        </Button>
        <Separator />
        <Button app_main_view_parts_attached:Language.Hint="toolbar-setting/group/node/remove" Command="{Binding NodeRemoveCommand}" CommandParameter="{Binding SelectedItem,ElementName=treeGroup}">
          <Image Source="{x:Static app_main:AppResource.CommonRemoveImage}" Style="{StaticResource DefaultImage}" />
        </Button>
        <!--</StackPanel>-->
      </ToolBar>
      <!--</TkoolBarTray>-->
      <TreeView x:Name="treeGroup" Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Visible" ItemsSource="{Binding GroupTree}" >
        <i:Interaction.Triggers>
          <i:EventTrigger EventName="SelectedItemChanged">
            <i:InvokeCommandAction Command="{Binding SelectedItemChangedCommand}" CommandParameter="{Binding SelectedItem, ElementName=treeGroup}" />
          </i:EventTrigger>
        </i:Interaction.Triggers>
        <TreeView.ItemTemplate>
          <HierarchicalDataTemplate ItemsSource="{Binding Nodes}" >
            <StackPanel Orientation="Horizontal">
              <Image Style="{StaticResource ItemImage}" Source="{Binding Image}" />
              <TextBlock Style="{StaticResource ItemText}" Text="{Binding DisplayText}" />
              <Popup Width="200" Placement="Left">
                <Popup.IsOpen>
                  <MultiBinding Converter="{StaticResource LogicalMultiAndConverter}" Mode="OneWay">
                    <Binding Path="IsSelected" Mode="OneWay" />
                    <Binding Path="CanEdit" Mode="OneWay" />
                  </MultiBinding>
                </Popup.IsOpen>
                <Border Style="{StaticResource MenuPopupBorder}">
                  <StackPanel>
                    <Grid>
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                      </Grid.ColumnDefinitions>
                      <Image Grid.Column="0" app_main_view_parts_attached:IconSize.IconScale="Small" Source="{x:Static app_main:AppResource.CommonEditImage}" Style="{StaticResource DefaultImage}" />
                      <TextBox Grid.Column="1" Text="{Binding Name}" Style="{StaticResource DefaultTextBox}" />
                    </Grid>
                    <Grid>
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                      </Grid.ColumnDefinitions>
                      <ComboBox Grid.Column="0" SelectedItem="{Binding GroupIconType}" ItemsSource="{Binding DataContext.GroupIconTypeList, RelativeSource={RelativeSource AncestorType=app_main_view_parts_control:CommonDataUserControl }}">
                        <ComboBox.ItemTemplate>
                          <DataTemplate>
                            <Image Width="16" Height="16">
                              <Image.Style>
                                <Style TargetType="Image" BasedOn="{StaticResource ItemImage}">
                                  <Setter Property="Source">
                                    <Setter.Value>
                                      <MultiBinding Converter="{StaticResource LauncherGroupIconTypeImageConverter}">
                                        <MultiBinding.Bindings>
                                          <Binding Path=""/>
                                          <!-- *{Binding}* -->
                                          <Binding Path="DataContext.GroupIconColor" RelativeSource="{RelativeSource AncestorType=TreeViewItem}" />
                                        </MultiBinding.Bindings>
                                      </MultiBinding>
                                    </Setter.Value>
                                  </Setter>
                                </Style>
                              </Image.Style>
                            </Image>
                          </DataTemplate>
                        </ComboBox.ItemTemplate>
                      </ComboBox>
                      <xctk:ColorPicker x:Name="treeItem" Grid.Column="1" Style="{StaticResource DefaultColorPicker}" SelectedColor="{Binding GroupIconColor}" IsOpen="{Binding IsColorOpen, Mode=TwoWay}" />
                    </Grid>
                  </StackPanel>
                </Border>
              </Popup>
            </StackPanel>
          </HierarchicalDataTemplate>
        </TreeView.ItemTemplate>
        <TreeView.ItemContainerStyle>
          <Style TargetType="{x:Type TreeViewItem}">
            <Setter Property="IsExpanded" Value="{Binding IsExpanded}"/>
            <Setter Property="IsSelected" Value="{Binding IsSelected}" />
          </Style>
        </TreeView.ItemContainerStyle>
      </TreeView>
    </Grid>
    <GridSplitter Grid.Row="0" Grid.Column="2" Style="{StaticResource DefaultVericalGridSplitter}" />
    <app_main_view_parts_control:LauncherListControl
      Grid.Row="0"
      Grid.Column="3"
      DataContext="{Binding LauncherItems}"
      x:Name="listItems"
      SelectedLauncherModel="{Binding DataContext.SelectedLauncherItem, RelativeSource={RelativeSource AncestorType=app_main_view_parts_control:CommonDataUserControl}, Mode=TwoWay}"
      DoubleClickCommand="{Binding DataContext.AppendChildLauncherItemCommand, RelativeSource={RelativeSource AncestorType=app_main_view_parts_control:CommonDataUserControl}}"
    />

    <GroupBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Header="drop mode" app_main_view_parts_attached:Language.Word="toolbar-setting/launcher/drop-mode" Style="{StaticResource DefaultGroupBox}">
      <StackPanel Orientation="Horizontal">
        <RadioButton Content="window" app_main_view_parts_attached:Language.Word="toolbar-setting/launcher/drop-mode/window" IsChecked="{Binding FileDropMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static app_library_pedata_define:LauncherItemFileDropMode.ShowExecuteWindow}}" Style="{StaticResource DefaultHorizontalRadioButton}" />
        <RadioButton Margin="8,0,0,0"  Content="arguments" app_main_view_parts_attached:Language.Word="toolbar-setting/launcher/drop-mode/arguments" IsChecked="{Binding FileDropMode, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static app_library_pedata_define:LauncherItemFileDropMode.ArgumentExecute}}"  Style="{StaticResource DefaultHorizontalRadioButton}" />
      </StackPanel>
    </GroupBox>

  </Grid>
</app_main_view_parts_control:CommonDataUserControl>
