<AV:CommonDataUserControl
  x:Class="ContentTypeTextNet.Pe.PeMain.View.Parts.Control.LockedButton"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:AV="clr-namespace:ContentTypeTextNet.Pe.PeMain.View.Parts.Control"
  xmlns:AC="clr-namespace:ContentTypeTextNet.Pe.PeMain.View.Parts.Converter"
  xmlns:AM="clr-namespace:ContentTypeTextNet.Pe.PeMain"
  xmlns:AA="clr-namespace:ContentTypeTextNet.Pe.PeMain.View.Parts.Attached"
  
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  mc:Ignorable="d" 
  d:DesignHeight="300" d:DesignWidth="300"
>
  <AV:CommonDataUserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/View/Parts/Resource/ImageDictionary.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </AV:CommonDataUserControl.Resources>
  <UserControl.Template>
    <ControlTemplate TargetType="{x:Type UserControl}">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ToggleButton x:Name="selectUnlock" Grid.Row="0" Grid.Column="0" IsChecked="false">
          <Image Source="{x:Static AM:AppResource.CommonLockImage}" Style="{StaticResource DefaultImage}" />
        </ToggleButton>
        <Button Grid.Row="0" Grid.Column="1" IsEnabled="{Binding IsChecked, ElementName=selectUnlock}" Command="{Binding Command, RelativeSource={RelativeSource AncestorType=AV:CommonDataUserControl}}"  CommandParameter="{Binding CommandParameter, RelativeSource={RelativeSource AncestorType=AV:CommonDataUserControl}}" >
          <ContentPresenter />
        </Button>
      </Grid>
    </ControlTemplate>
  </UserControl.Template>
</AV:CommonDataUserControl>
