<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
>
  <Style x:Key="DefaultImage" TargetType="Image">
    <Style.Triggers>
      <Trigger Property="IsEnabled" Value="False">
        <Setter Property="Opacity" Value="0.5" />
      </Trigger>
    </Style.Triggers>
    <Setter Property="RenderOptions.BitmapScalingMode" Value="NearestNeighbor" />
  </Style>

  <Thickness x:Key="ItemImageMargin">2</Thickness>

  <Style x:Key="ItemImage" TargetType="Image" BasedOn="{StaticResource DefaultImage}">
    <Setter Property="Margin" Value="{StaticResource ItemImageMargin}" />
  </Style>

  
</ResourceDictionary>