<ResourceDictionary 
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
>
  <Style x:Key="DefaultHorizontalToolBarTray" TargetType="ToolBarTray">
    <Setter Property="Orientation" Value="Horizontal"/>
    <Setter Property="Background"  Value="Transparent"/>
  </Style>
  <Style x:Key="DefaultVerticalToolBarTray" TargetType="ToolBarTray">
    <Setter Property="Orientation" Value="Vertical"/>
    <Setter Property="Background"  Value="Transparent"/>
  </Style>
  
  <Style x:Key="DefaultToolbar" TargetType="ToolBar">
    <Setter Property="ToolBarTray.IsLocked" Value="True" />
    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />
  </Style>
  <Style x:Key="DefaultHorizontalToolbar" TargetType="ToolBar" BasedOn="{StaticResource DefaultToolbar}">
    <Setter Property="HorizontalAlignment" Value="Stretch" />
  </Style>
  <Style x:Key="DefaultVerticalToolbar" TargetType="ToolBar" BasedOn="{StaticResource DefaultToolbar}">
    <Setter Property="VerticalAlignment" Value="Stretch" />
  </Style>
</ResourceDictionary>