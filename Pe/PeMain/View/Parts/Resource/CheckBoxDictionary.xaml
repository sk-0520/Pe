<ResourceDictionary 
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
>
  <Style x:Key="DefaultCheckBox" TargetType="CheckBox">
    <Setter Property="VerticalAlignment" Value="Center" />
  </Style>
  <Style x:Key="DefaultVerticalCheckBox" TargetType="CheckBox" BasedOn="{StaticResource DefaultCheckBox}" >
    <Setter Property="Margin" Value="2,8,3,3" />
  </Style>
  <Style x:Key="DefaultHorizontalCheckBox" TargetType="CheckBox" BasedOn="{StaticResource DefaultCheckBox}" >
    <Setter Property="Margin" Value="2,3,8,3" />
  </Style>
</ResourceDictionary>