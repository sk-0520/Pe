<ResourceDictionary 
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
>
  <Style x:Key="DefaultRadioButton" TargetType="RadioButton">
    <Setter Property="VerticalAlignment" Value="Center" />
  </Style>
  <Style x:Key="DefaultVerticalRadioButton" TargetType="RadioButton" BasedOn="{StaticResource DefaultRadioButton}" >
    <Setter Property="Margin" Value="2,3,2,2" />
  </Style>
  <Style x:Key="DefaultHorizontalRadioButton" TargetType="RadioButton" BasedOn="{StaticResource DefaultRadioButton}" >
    <Setter Property="Margin" Value="2,2,3,2" />
  </Style>
</ResourceDictionary>