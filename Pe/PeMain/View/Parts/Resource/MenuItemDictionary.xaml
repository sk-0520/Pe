<ResourceDictionary 
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
>
  <!--  Cannot find source for binding with reference 'RelativeSource FindAncestor, AncestorType='System.Windows.Controls.ItemsControl', AncestorLevel='1''. BindingExpression:Path=HorizontalContentAlignment; DataItem=null; target element is 'MenuItem' (Name=''); -->
  <Style x:Key="_MenuItem" TargetType="MenuItem">
    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
    <Setter Property="VerticalContentAlignment" Value="Stretch"/>
  </Style>

  <!-- http://stackoverflow.com/questions/1763763/wpf-menu-item-with-image -->
  <!--<Image x:Key="MenuItem" x:Shared="False" Source="{Binding MenuImage}" />-->

  <Style x:Key="IMenuItem" TargetType="MenuItem" BasedOn="{StaticResource _MenuItem}">
    <Setter Property="Header" Value="{Binding MenuText}" />
    <Setter Property="Icon" Value="{Binding MenuIcon}"  />
    <Setter Property="SnapsToDevicePixels" Value="True"  />
    <!--<Setter Property="Template" Value="{StaticResource IMenuItemTemplate}" />-->
  </Style>

  <!--<ControlTemplate x:Key="IMenuItemTemplate" TargetType="MenuItem">
    <ContentPresenter />
  </ControlTemplate>-->

</ResourceDictionary>