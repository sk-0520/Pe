<?xml version="1.0"?>
<default>
	<!-- ソフトあんま持ってないわ -->
	<items>
		<!-- ブラウザ -->
		<LauncherItem Name="${default/item/iexplorer}">
			<LauncherType>File</LauncherType>
			<Command>
				%PROGRAMFILES%\Internet Explorer\iexplore.exe
				%PROGRAMFILES(X86)%\Internet Explorer\iexplore.exe</Command>
			<WorkDirPath>%HOMEDRIVE%%HOMEPATH%</WorkDirPath>
			<Tag>
				<string>${default/tag/web-browser}</string>
			</Tag>
		</LauncherItem>
		<LauncherItem Name="${default/item/firefox}">
			<LauncherType>File</LauncherType>
			<Command>
				%PROGRAMFILES%\Mozilla Firefox\firefox.exe
				%PROGRAMFILES(X86)%\Mozilla Firefox\firefox.exe
			</Command>
			<Tag>
				<string>${default/tag/web-browser}</string>
			</Tag>
		</LauncherItem>
		<LauncherItem Name="${default/item/waterfox}">
			<LauncherType>File</LauncherType>
			<Command>
				%PROGRAMFILES%\Waterfox\waterfox.exe
			</Command>
			<Tag>
				<string>${default/tag/web-browser}</string>
			</Tag>
		</LauncherItem>
		<LauncherItem Name="${default/item/opera}">
			<LauncherType>File</LauncherType>
			<Command>
				%PROGRAMFILES%\Opera x64\opera.exe
				%PROGRAMFILES%\Opera\opera.exe
				%PROGRAMFILES(X86)%\Opera\opera.exe
			</Command>
			<Tag>
				<string>${default/tag/web-browser}</string>
			</Tag>
		</LauncherItem>
	
		<!-- office -->
		<LauncherItem Name="${default/item/ms-excel}">
			<LauncherType>File</LauncherType>
			<Command>
				# office 2010
				%PROGRAMFILES%\Microsoft Office\Office14\EXCEL.EXE
				%PROGRAMFILES(X86)%\Microsoft Office\Office14\EXCEL.EXE
			</Command>
			<Tag>
				<string>${default/tag/office}</string>
			</Tag>
		</LauncherItem>
	
		<!-- エディタ -->
		<LauncherItem Name="${default/item/sakura}">
			<LauncherType>File</LauncherType>
			<Command>
				%PROGRAMFILES%\Sakura\sakura.exe
				%PROGRAMFILES(X86)%\Sakura\sakura.exe
			</Command>
			<Tag>
				<string>${default/tag/editor}</string>
			</Tag>
		</LauncherItem>
		
		<!-- 開発 -->
		<LauncherItem Name="SharpDevelop">
			<LauncherType>File</LauncherType>
			<Command>
				# 5.0
				%PROGRAMFILES%\SharpDevelop\5.0\bin\SharpDevelop.exe
				%PROGRAMFILES(X86)%\SharpDevelop\5.0\bin\SharpDevelop.exe
				# 4.4
				%PROGRAMFILES%\SharpDevelop\4.4\bin\SharpDevelop.exe
				%PROGRAMFILES(X86)%\SharpDevelop\4.4\bin\SharpDevelop.exe
			</Command>
			<Tag>
				<string>${default/tag/development}</string>
			</Tag>
		</LauncherItem>
		
		<!-- ファイル操作 -->
		<LauncherItem Name="FileZilla FTP Client">
			<LauncherType>File</LauncherType>
			<Command>
				%PROGRAMFILES%\FileZilla FTP Client\filezilla.exe
				%PROGRAMFILES(X86)%\FileZilla FTP Client\filezilla.exe
			</Command>
			<Tag>
				<string>${default/tag/file}</string>
			</Tag>
		</LauncherItem>
		
		<!-- 画像関係 -->
		<LauncherItem Name="IrfanView">
			<LauncherType>File</LauncherType>
			<Command>
				%PROGRAMFILES%\IrfanView\i_view32.exe
				%PROGRAMFILES(X86)%\IrfanView\i_view32.exe
			</Command>
			<Tag>
				<string>${default/tag/image}</string>
			</Tag>
		</LauncherItem>
		<LauncherItem Name="GIMP">
			<LauncherType>File</LauncherType>
			<Command>
				# 2.8
				%PROGRAMFILES%\GIMP 2\bin\gimp-2.8.exe
				%PROGRAMFILES(X86)%\GIMP 2\bin\gimp-2.8.exe
			</Command>
			<Tag>
				<string>${default/tag/image}</string>
			</Tag>
		</LauncherItem>
		<LauncherItem Name="Inkscape">
			<LauncherType>File</LauncherType>
			<Command>
				%PROGRAMFILES%\Inkscape\Inkscape.exe
				%PROGRAMFILES(X86)%\Inkscape\Inkscape.exe
			</Command>
			<WorkDirPath>%USERPROFILE%</WorkDirPath>
			<IconItem>
				<Path>
					%PROGRAMFILES%\Inkscape\Inkscape.ico
					%PROGRAMFILES(X86)%\Inkscape\Inkscape.ico
				</Path>
			</IconItem>
			<Tag>
				<string>${default/tag/image}</string>
			</Tag>
		</LauncherItem>

	</items>
	
	<groups>
		<group Name="${default/group/main}">
			<item Name="${default/item/iexplorer}" />
			<item Name="${default/item/firefox}" />
		</group>
	</groups>
</default>