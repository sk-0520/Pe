{
	"name": "pe-documents",
	"version": "1.0.0",
	"description": "Pe documents",
	"main": "index.pug",
	"scripts": {
		"watch": "parcel watch --no-autoinstall --public-url . ./source/index.pug",
		"build:clean": "rimraf ./build/*",
		"build:output": "parcel build --no-autoinstall --no-source-maps --out-dir ./build/ --no-content-hash --public-url . ./source/index.pug",
		"build": "npm run build:clean & npm run build:output"
	},
