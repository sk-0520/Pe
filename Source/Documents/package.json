	"license": "GPL-3.0-or-later",
	"repository": {
		"type": "git",
		"url": "git@bitbucket.org:sk_0520/pe.git"
	},
	"devDependencies": {
		"parcel-bundler": "^1.12.4",
		"pug": "^2.0.4",
		"rimraf": "^3.0.2",
		"sass": "^1.25.0",
		"typescript": "^3.7.5"
	}
}
