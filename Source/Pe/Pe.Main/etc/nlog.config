<?xml version="1.0" encoding="utf-8" ?>
<nlog
	xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	autoReload="true"
	internalLogLevel="Info"
	internalLogToTrace="true"
>
	<targets>
		<target
			xsi:type="File"
			name="logfile"
			fileName="${var:logfile}"
			layout="${date:format=yyyy-MM-dd HH\:mm\:ss.fff}|[${level:uppercase=true:padding=-5}]|${pad:padding=6:inner=${sequenceid}}|&lt;${threadid}&gt;| ${message} ${exception:format=tostring} | ${callsite}(${callsite-linenumber}) | ${logger:shortName=true} | ${stacktrace:format=DetailedFlat:topFrames=3}"
			header="[START] ${date:format=yyyy-MM-dd HH\:mm\:ss.fff}"
			footer="[END]"
			keepFileOpen="True"
		/>
		<target
			xsi:type="Trace"
			name="dev"
			layout="${date:format=yyyy-MM-dd HH\:mm\:ss.fff}[${level:uppercase=true:padding=-5}]&lt;${threadid}&gt; ${message} ${exception:format=tostring} | ${callsite}(${callsite-linenumber})"
		/>
	</targets>

	<rules>
		<logger name="ContentTypeTextNet.Pe.Main.Models.KeyAction.KeyActionChecker" minlevel="Trace" maxlevel="Debug" final="true" writeTo="logfile" />
		<logger name="ContentTypeTextNet.Pe.Main.Models.KeyAction.KeyActionAssistant" minlevel="Trace" maxlevel="Debug" final="true" writeTo="logfile"/>
		<logger name="ContentTypeTextNet.Pe.Main.Models.Logic.KeyboradHooker" minlevel="Trace" maxlevel="Debug" final="true" writeTo="logfile"/>
		<logger name="ContentTypeTextNet.Pe.Main.Models.Applications.ApplicationDatabaseAccessor" minlevel="Trace" maxlevel="Debug" final="true" writeTo="logfile"/>

		<logger name="*" minlevel="Trace" writeTo="dev,logfile" />
	</rules>
</nlog>
