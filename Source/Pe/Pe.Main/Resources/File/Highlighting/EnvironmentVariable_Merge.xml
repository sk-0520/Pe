<SyntaxDefinition xmlns="http://icsharpcode.net/sharpdevelop/syntaxdefinition/2008" name="EnvVar_Update">

	<Color name="Key" foreground="Blue" fontWeight="bold" />
	<Color name="Value" foreground="Brown" fontWeight="bold"   />

	<RuleSet ignoreCase="false">
		<Rule color="Key">
			^\s*[A-Za-z0-9]+\s*(?==\s*.*)
		</Rule>
		<Rule color="Value">
			(?&lt;=^\s*[A-Za-z0-9]+\s*=\s*).+
		</Rule>
	</RuleSet>

</SyntaxDefinition>
