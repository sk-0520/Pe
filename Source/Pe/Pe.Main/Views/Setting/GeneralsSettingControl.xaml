          <DataTemplate DataType="{x:Type app_main_viewmodels_setting:AppProxySettingEditorViewModel}">
            <GroupBox Header="{Binding Header}" Style="{StaticResource HeaderGroupBox}">
              <StackPanel>
                <!-- 通常設定 -->
                <Grid>
                  <Grid.ColumnDefinitions>
                    <ColumnDefinition Style="{StaticResource LabelDefinition}" />
                    <ColumnDefinition Style="{StaticResource ContentDefinition}" />
                  </Grid.ColumnDefinitions>

                  <Label Grid.Column="0" VerticalAlignment="Top" Style="{StaticResource HeaderLabel}" Content="{Binding Resources.String_Setting_Generals_Proxy_Basic_A, Source={x:Static app_main:CultureService.Instance}}" />
                  <Grid Grid.Column="1" Margin="{StaticResource HalfMargin}">
                    <StackPanel>
                      <Grid>
