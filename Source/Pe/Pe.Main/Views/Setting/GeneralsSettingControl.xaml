                        </Grid.ColumnDefinitions>

                        <CheckBox Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource Horizontal-CheckBox}" IsChecked="{Binding ProxyIsEnabled}" Content="{Binding Resources.String_Setting_Generals_Proxy_ProxyIsEnabled_A, Source={x:Static app_main:CultureService.Instance}}" />
