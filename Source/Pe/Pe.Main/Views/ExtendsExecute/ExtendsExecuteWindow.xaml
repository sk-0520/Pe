<Window
  x:Name="root"
  x:Class="ContentTypeTextNet.Pe.Main.Views.ExtendsExecute.ExtendsExecuteWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

  xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
  xmlns:prism="http://prismlibrary.com/"

  xmlns:app_core_views="clr-namespace:ContentTypeTextNet.Pe.Core.Views;assembly=Pe.Core"
  xmlns:app_main_views_launcher_item_customize="clr-namespace:ContentTypeTextNet.Pe.Main.Views.LauncherItemCustomize"

  SizeToContent="Height"
  ResizeMode="NoResize"
  Title="ExtendsExecuteWindow"
  Height="450"
  Width="800"

  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
>
  <i:Interaction.Triggers>
    <app_core_views:RequestTrigger SourceObject="{Binding CloseRequest}">
      <prism:InvokeCommandAction Command="{Binding CloseCommand, ElementName=root}" />
    </app_core_views:RequestTrigger>
  </i:Interaction.Triggers>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <Grid Grid.Row="0">
      <Grid.Resources>
        <Style x:Key="LabelDefinition" TargetType="ColumnDefinition">
          <Setter Property="Width" Value="Auto" />
          <Setter Property="SharedSizeGroup" Value="ExtendsExecuteHeader" />
        </Style>
        <Style x:Key="ContentDefinition" TargetType="ColumnDefinition">
          <Setter Property="Width" Value="*" />
        </Style>
      </Grid.Resources>

      <StackPanel>
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Style="{StaticResource LabelDefinition}" />
            <ColumnDefinition Style="{StaticResource ContentDefinition}" />
          </Grid.ColumnDefinitions>

          <Label Grid.Column="0" Content="command" />
          <TextBox Grid.Column="1" Text="" IsReadOnly="True" />
        </Grid>

        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Style="{StaticResource LabelDefinition}" />
            <ColumnDefinition Style="{StaticResource ContentDefinition}" />
          </Grid.ColumnDefinitions>

          <Label Grid.Column="0" Content="option" />
          <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ComboBox Grid.Column="0" IsEditable="True" Text="" />
            <Button Grid.Column="1" Content="file" />
            <Button Grid.Column="2" Content="dir" />
          </Grid>
        </Grid>

        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Style="{StaticResource LabelDefinition}" />
            <ColumnDefinition Style="{StaticResource ContentDefinition}" />
          </Grid.ColumnDefinitions>

          <Label Grid.Column="0" Content="work dir" />
          <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*" />
              <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ComboBox Grid.Column="0" IsEditable="True" Text="" />
            <Button Grid.Column="1" Content="dir" />
          </Grid>
        </Grid>

        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Style="{StaticResource LabelDefinition}" />
            <ColumnDefinition Style="{StaticResource ContentDefinition}" />
          </Grid.ColumnDefinitions>

          <Label Grid.Column="0" Content="others" />
          <WrapPanel Grid.Column="1" Orientation="Horizontal">
            <CheckBox Content="stdio" />
            <CheckBox Content="admin" />
          </WrapPanel>
        </Grid>

        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Style="{StaticResource LabelDefinition}" />
            <ColumnDefinition Style="{StaticResource ContentDefinition}" />
          </Grid.ColumnDefinitions>

          <Label Grid.Column="0" Content="env" />
          <StackPanel Grid.Column="1">
            <CheckBox Content="edit" />
            <app_main_views_launcher_item_customize:EnvironmentValieableEditor MergeTextDocument="{Binding MergeTextDocument}" RemoveTextDocument="{Binding RemoveTextDocument}" />
          </StackPanel>
        </Grid>

      </StackPanel>
    </Grid>

    <Grid Grid.Row="1">
      <StackPanel Orientation="Horizontal">
        <Button Content="exec" Command="{Binding ExecuteCommand}" />
        <Button Content="close" Command="{Binding CloseCommand, ElementName=root}" />
      </StackPanel>
    </Grid>

  </Grid>
</Window>
