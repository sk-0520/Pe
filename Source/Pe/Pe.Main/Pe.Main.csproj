<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <UseWPF>true</UseWPF>
    <Platforms>x64;x86</Platforms>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <WarningsAsErrors />
    <LangVersion>8.0</LangVersion>
    <Nullable>enable</Nullable>
    <RootNamespace>ContentTypeTextNet.Pe.Main</RootNamespace>
    <AssemblyName>Pe.Main</AssemblyName>
    <Version>0.84.0</Version>
    <ApplicationIcon>Resources\Icon\App.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="nlog.config" />
    <None Remove="Resources\Icon\App.ico" />
    <None Remove="Resources\Icon\NotifyIcon\App-beta.ico" />
    <None Remove="Resources\Icon\NotifyIcon\App-debug.ico" />
    <None Remove="Resources\Icon\NotifyIcon\App-release.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AvalonEdit" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="3.0.0" />
    <PackageReference Include="NLog.Extensions.Logging" Version="1.6.1" />
    <PackageReference Include="Prism.Wpf" Version="7.2.0.1367" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Pe.Core\Pe.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="doc\help\" />
    <Folder Include="doc\license\" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\Icon\App.ico" />
    <Resource Include="Resources\Icon\NotifyIcon\App-beta.ico" />
    <Resource Include="Resources\Icon\NotifyIcon\App-debug.ico" />
    <Resource Include="Resources\Icon\NotifyIcon\App-release.ico" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <Page Update="C:\Users\abcde\.nuget\packages\microsoft.ui.xaml\2.2.190917002\buildTransitive\DensityStyles\Compact.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="robocopy /MIR /R:3 /S &quot;$(ProjectDir)etc&quot; &quot;$(OutDir)..\etc&quot;&#xD;&#xA;robocopy /MIR /R:3 /S &quot;$(ProjectDir)doc&quot; &quot;$(OutDir)..\doc&quot;&#xD;&#xA;if %25ERRORLEVEL%25 lss 8 exit 0" />
  </Target>

</Project>