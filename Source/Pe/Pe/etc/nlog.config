<?xml version="1.0" encoding="utf-8" ?>
<nlog
	xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	autoReload="true"
	internalLogFile="x:\temp\console-example-internal.log"
	internalLogLevel="Info"
>
	<targets>
		<target
			xsi:type="File"
			name="logfile"
			fileName="${var:logfile}"
			layout="${date:format=yyyy-MM-dd HH\:mm\:ss.fff}|${level:uppercase=true}|${message} ${exception}|${logger}|${all-event-properties}"
			header="[START]"
			footer="[END]"
		/>
		<target
			xsi:type="Trace"
			name="dev"
			layout="${date:format=yyyy-MM-dd HH\:mm\:ss.fff} [${level:uppercase=true:padding=-5}]&lt;${threadid}&gt; ${message} ${exception} | ${callsite}(${callsite-linenumber})"
		/>
	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<!--<logger name="*" minlevel="Trace" writeTo="target1" />-->
		<logger name="*" minlevel="Trace" writeTo="dev,logfile" />
	</rules>
</nlog>
