<Window
  x:Class="ContentTypeTextNet.Pe.Main.Views.CustomizeLauncherItem.CustomizeLauncherItemWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

  xmlns:app_view_customize_launcher_item="clr-namespace:ContentTypeTextNet.Pe.Main.Views.CustomizeLauncherItem"

  Title="CustomizeLauncherItemWindow"
  Width="800"
  Height="450"

  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
>
  <Window.Resources>
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
  </Window.Resources>

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    
    <ScrollViewer Grid.Row="0">
      <app_view_customize_launcher_item:CustomizeLauncherItemControl Item="{Binding}" />
    </ScrollViewer>

    <StackPanel Grid.Row="1" Orientation="Horizontal">
      <Button Content="ok" />
      <Button Content="cancel" />
    </StackPanel>

  </Grid>
</Window>
