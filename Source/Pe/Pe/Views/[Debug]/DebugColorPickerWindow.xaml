<Window
  x:Class="ContentTypeTextNet.Pe.Main.Views._Debug_.DebugColorPickerWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"


  Title="DebugColorPickerWindow"
  Width="400"
  Height="250"
  WindowStartupLocation="CenterScreen"

  xmlns:app_core_views="clr-namespace:ContentTypeTextNet.Pe.Core.Views;assembly=Pe.Core"

  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
>

  <Grid VerticalAlignment="Center">

    <StackPanel>
      <app_core_views:NumericUpDown x:Name="custom" IsReadOnly="false" />
      <Separator />
      <Slider
        Value="{Binding Value, ElementName=custom}"
        Minimum="-150"
        Maximum="+150"
      />
      <Separator />
      <app_core_views:ColorCanvas />
    </StackPanel>

  </Grid>
</Window>
