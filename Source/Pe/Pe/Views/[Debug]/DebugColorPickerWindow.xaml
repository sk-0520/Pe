<Window
  x:Class="ContentTypeTextNet.Pe.Main.Views._Debug_.DebugColorPickerWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"


  Title="DebugColorPickerWindow"
  Width="400"
  Height="250"
  WindowStartupLocation="CenterScreen"

  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
>
  <Window.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Pe.Core;component/Views/UpDownSliderDictionary.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Window.Resources>

  <Grid VerticalAlignment="Center">

    <StackPanel>
      <Slider x:Name="custom" Style="{StaticResource UpDownSlider}" />
      <Separator />
      <Slider Value="{Binding Value, ElementName=custom}" />
    </StackPanel>

  </Grid>
</Window>
