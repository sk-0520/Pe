<Window
  x:Name="root"
  x:Class="ContentTypeTextNet.Pe.Main.Views.Accept.AcceptWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

  xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
  xmlns:prism="http://prismlibrary.com/"

  xmlns:app_core_view="clr-namespace:ContentTypeTextNet.Pe.Core.Views;assembly=Pe.Core"

  Title="AcceptWindow"
  Height="450"
  Width="800"

  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
>
  <i:Interaction.Triggers>
    <app_core_view:RequestTrigger SourceObject="{Binding CloseRequest}">
      <prism:InvokeCommandAction Command="{Binding CloseCommand, ElementName=root}" />
    </app_core_view:RequestTrigger>
  </i:Interaction.Triggers>
  <Grid>
    <StackPanel>
      <Button Command="{Binding AffirmativeCommand}">OK</Button>
      <Button Command="{Binding NegativeCommand}">Cancel</Button>
    </StackPanel>
  </Grid>
</Window>
