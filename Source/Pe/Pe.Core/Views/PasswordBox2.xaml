<UserControl
  x:Class="ContentTypeTextNet.Pe.Core.Views.PasswordBox2"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  IsTabStop="False"
>
  <PasswordBox
    x:Name="passwordBox"
    PasswordChanged="PasswordBox_PasswordChanged"
    IsTabStop="{Binding IsTabStop, RelativeSource={RelativeSource AncestorType=UserControl}}"
    TabIndex="{Binding TabIndex, RelativeSource={RelativeSource AncestorType=UserControl}}"
  />
</UserControl>
